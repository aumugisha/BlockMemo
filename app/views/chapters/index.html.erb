<%= link_to "Dashboard", dashboard_path, class: "btn btn-alert" %>
<%= link_to "All courses", courses_path, class: "btn btn-primary" %>
<% if !@subscription.nil? %>
<%= link_to "Resume", course_chapter_path(@subscription.course, @subscription.chapter_completed), class: "btn btn-danger" %>
<% end %>
<br>
<div class="container text-center">
    <h1>Here are all the chapters of <%= @course.name %></h1>
</div>

<% @chapters.each do |chapter|  %>
        <div class="col-md-4">
          <div class="card">
            <div class="card-block">
              <h4 class="card-title text-center"><%= chapter.order %> - <%= chapter.name %> </h4>
              <h6 class="card-subtitle text-muted text-center"><%= chapter.summary %></h6>
              <p class="card-text p-y-1">level : <%= chapter.level %></p>
              <% if @subscription.nil? %>
              <p>Subscribe to access chapters</p>
              <% else %>
              <% if @subscription.chapter_completed >= chapter.order %>
              <%= link_to "Details", course_chapter_path(chapter.course, chapter), class: "btn btn-primary" %>
              <% else %>
              <%= link_to "Complete previous chapters to access", course_chapter_path(@subscription.course, @subscription.chapter_completed), class: "btn btn-danger" %>
              <% end %>
              <% end %>
            </div>
          </div>
        </div>
    <% end %>

     <%= link_to 'Subcribe', subscriptions_path(subscription: {course_id: @course}), method: :post , class: "btn btn-danger" %>