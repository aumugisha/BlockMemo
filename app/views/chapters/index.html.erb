<div class="container">

<div class="container">
    <h1>Here are all the chapters of <%= @course.name %></h1>
</div>

<div> 
<%= link_to "Dashboard", dashboard_path, class: "btn btn-alert" %>
<%= link_to "All courses", courses_path, class: "btn btn-primary" %>
<% if !@subscription.nil? %>
<%= link_to "Resume", course_chapter_path(@subscription.course, @subscription.chapter_completed), class: "btn btn-danger" %>
<% end %>
</div>

<div>

<% @chapters.each do |chapter|  %>
            <div class="card" style="width: 18rem;">
              <%= image_tag "Logo-small.png" %>
              <div class="card-body">
                <h5 class="card-title"><%= chapter.order %> - <%= chapter.name %></h5>
                <p class="card-text"><%= chapter.summary %></p>
              </div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">Level : <%= chapter.level %></li>
              </ul>
  <% if @subscription.nil? %>            
              <div class="card-body">
              <a href="#" class="card-link">Subscribe to access chapters</a>
  <% else %>     
      <% if @subscription.chapter_completed + 1 >= chapter.order  %>
                <a href="#" class="card-link"><%= link_to "Details", course_chapter_path(chapter.course, chapter), class: "btn btn-primary" %></a>
        <% else %>  
          <%= link_to "Complete previous chapters to access", course_chapter_path(@subscription.course, @subscription.chapter_completed), class: "btn btn-danger" %>      
      <% end %>    
              </div>
            </div>
  <% end %>
 <% end %>


 <%= link_to 'Subcribe', subscriptions_path(subscription: {course_id: @course}), method: :post , class: "button-hover" %>
 </div>
</div>
