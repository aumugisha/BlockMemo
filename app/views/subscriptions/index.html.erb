<div class="header">
  <h2>Please select a Course to start with</h2>
</div>
    <div class="container", style="background-color: white; height:1er; width:90%">   
    
    <% @subscriptions.each do |subscription|  %>
        <div class="col-md-4">
          <div class="card">
            <div class="card-block">
              <h4 class="card-title text-center"><%= subscription.course.name %> - <%= subscription.user.first_name %> </h4>
              <h6 class="card-subtitle text-muted text-center"><%= subscription.course.level %></h6>
              <p class="card-text p-y-1">level : <%= subscription.course.level %></p>
              <% if subscription.chapter_completed >= subscription.course.chapters.last.order %>
              <p class="card-text p-y-1">Progress : Course completed </p>
              <% else %>
                <p class="card-text p-y-1">Progress : <%= subscription.chapter_completed %> / <%= subscription.course.chapters.last.order %></p>
              <% end  %>

              <%= link_to "Resume", course_chapter_path(subscription.course, subscription.chapter_completed + 1), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
    <% end %>
    
     </div>

  <div class="py-5">
    <div class="container">
      <div class="row hidden-md-up">
      <% @courses.each do |course|  %>
        <div class="col-md-4">
          <div class="card">
            <div class="card-block">
              <h4 class="card-title"><%= course.name %> </h4>
              <h6 class="card-subtitle text-muted"><%= course.topic %></h6>
              <p class="card-text p-y-1"><%= course.level %></p>
              <%= link_to "Details", course_chapters_path(course), class: "btn btn-primary" %>
              <%= link_to 'Subcribe', subscriptions_path(subscription: {course_id: course}), method: :post , class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
</div>

        <div class="container_slider"> 
            <div class="slider">
                <% @courses.each_with_index do |course, i|  %>
                <div class="box<% i+1 %> box">
                    <div class="bg"></div>
                    <div class="details">
                        <h1><%= course.name %></h1>
                        <p>
                            <%= course.chapters.first.summary %> 
                        </p>
                        <%= link_to "Details", course_chapters_path(course), class: "btn btn-primary" %>
                        <%= link_to 'Subcribe', subscriptions_path(subscription: {course_id: course}), method: :post , class: "btn btn-danger" %>
                    </div>

                    <div class="illustration"><div class="inner"></div></div>
                </div>
                <% end %>
                                
                   
            </div>

            <svg xmlns="http://www.w3.org/2000/svg" class="prev" width="56.898" height="91" viewBox="0 0 56.898 91"><path d="M45.5,0,91,56.9,48.452,24.068,0,56.9Z" transform="translate(0 91) rotate(-90)" fill="#fff"/></svg>
            <svg xmlns="http://www.w3.org/2000/svg" class="next" width="56.898" height="91" viewBox="0 0 56.898 91"><path d="M45.5,0,91,56.9,48.452,24.068,0,56.9Z" transform="translate(56.898) rotate(90)" fill="#fff"/></svg>
            <div class="trail">
                    <div class="box1 active">1</div>
                    <div class="box2">2</div>
                    <div class="box3">3</div>
                    <div class="box4">4</div>
                    <div class="box5">5</div>
            </div>
        </div>   
