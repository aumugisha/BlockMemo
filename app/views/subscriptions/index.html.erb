<div class="header">
  <h2>Please select a Course to start with</h2>
</div>
    <div class="container", style="background-color: white; height:1er; width:90%">   
    
    <% @subscriptions.each do |subscription|  %>
        <div class="col-md-4">
          <div class="card">
            <div class="card-block">
              <h4 class="card-title text-center"><%= subscription.course.name %> - <%= subscription.user.first_name %> </h4>
              <h6 class="card-subtitle text-muted text-center"><%= subscription.course.level %></h6>
              <p class="card-text p-y-1">level : <%= subscription.course.level %></p>
              <p class="card-text p-y-1">Progress : <%= subscription.chapter_completed %> / <%= subscription.course.chapters.last.order %></p>
              <%= link_to "Details", course_chapter_path(subscription.course, subscription), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
    <% end %>
    
     </div>

<div class="py-5">
    <div class="container">
      <div class="row hidden-md-up">
      <% @courses.each do |course|  %>
        <div class="col-md-4">
          <div class="card">
            <div class="card-block">
              <h4 class="card-title"><%= course.name %> </h4>
              <h6 class="card-subtitle text-muted"><%= course.topic %></h6>
              <p class="card-text p-y-1"><%= course.level %></p>
              <%= link_to "Details", course_chapters_path(course), class: "btn btn-primary" %>
              <%= link_to 'Subcribe', subscriptions_path(subscription: {course_id: course}), method: :post , class: "btn btn-danger" %>
            </div>
          </div>
        </div>
    <% end %>

