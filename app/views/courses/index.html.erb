<div class="container text-center">
    <h1>Here is the list of all courses available</h1>
</div>



  <div class="py-5">
    <div class="container">
      <div class="row hidden-md-up">
      <% @courses.each do |course|  %>
        <div class="col-md-4">
          <div class="card">
            <div class="card-block">
              <h4 class="card-title"><%= course.name %> </h4>
              <h6 class="card-subtitle text-muted"><%= course.topic %></h6>
              <p class="card-text p-y-1"><%= course.level %></p>
              <%= link_to "Follow this course", new_subscription_path(), {:style=>'color:blue'} %>
              <%= link_to 'Subcribe', subcriptions_path, method: :post, data: { course_id: course, user_id: current_user, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
    <% end %>

      </div>
    </div>
  </div>
