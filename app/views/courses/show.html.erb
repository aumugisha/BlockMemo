<%= link_to "Dashboard", dashboard_path, class: "btn btn-alert" %>

<div class="container text-center">
    <h1>Course page - <%= @course.name %></h1>
    <p><%= @course.topic %> - level: <%= @course.level %> </p>
    <%= link_to @course.chapters.first.name, course_chapter_path(@course.chapters.first), {:style=>'color:blue'} %>
    
</div>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %> |
<%= link_to 'Leave a review', new_course_review_path(@course) %>

<%= link_to "All chapters", course_chapters_path(@course), {:style=>'color:blue'} %>

