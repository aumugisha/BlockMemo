 <div class="row">
 <% @course.chapters.each do |chapter| %>
  
    <div class="col-sm-6">
      <%= image_tag "Logo-small.png" %>
      <div class="card-body">
        <h5 class="card-title"><%= chapter.order %> - <%= chapter.name %></h5>
        <p class="card-text">
          <%= chapter.summary %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Level : <%= chapter.level %></li>
          </ul>
        </p>
        <% if @subscription.nil? %>
          <%= link_to 'Subscribe to access', subscriptions_path(subscription: {course_id: @course}), method: :post , class: "button", style: "margin-left: 10px; margin-right: 10px" %>
        <% else %>
          <% if @subscription.chapter_completed + 1 >= chapter.order  %>
            <%= link_to "Details", course_chapter_path(chapter.course, chapter, wanted: chapter.order), class: "button", style: "margin-left: 10px; margin-right: 10px" %>
          <% else %>
            <%= link_to "Complete previous chapters to access", course_chapter_path(@subscription.course, @subscription.chapter_completed), class: "button btn-lg btn-block", style: "margin-left: 1px; margin-right: 1px; margin-bottom: auto;" %>
          <% end %>
        <% end %>
      </div>
    </div>
 
<% end %>

</div>
   
  

